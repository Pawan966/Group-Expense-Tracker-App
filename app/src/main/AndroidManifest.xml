<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.groupexpenstracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroupExpensTracker">
        <activity android:name=".TripDetail"
            android:screenOrientation="portrait" ></activity>
        <activity
            android:name=".Contributions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExpenseGraph"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModifyExpense"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddExpense"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupMembers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddPersons"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupFormation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseTrip"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>